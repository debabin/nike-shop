{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/gql": ["app/_src/graphql/client"],
      "@/assets/*": ["assets/*"],
      "@/sections": ["app/_src/sections"],
      "@/utils/helpers": ["app/_src/utils/helpers"],
      "@/utils/constants": ["app/_src/utils/constants"],
      "@/utils/api": ["app/_src/utils/api"],
      "@/ui": ["app/_src/components"],
      "@/ui/icons": ["app/_src/components/common/icons"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
